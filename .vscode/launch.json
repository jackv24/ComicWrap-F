    "version": "0.2.0",
    "configurations": [
        {
            "name": "Emulators (debug mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "args": [
                "--dart-define",
                "USE_EMULATORS=true",
            ]
        },
        {
            "name": "Production (no ads, debug mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "args": [
                "--dart-define",
                "DISABLE_ADS=true",
            ]
        },
        {
            "name": "Production (debug mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug"
        },
        {
            "name": "Production (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        },
        {
            "name": "Integration Test",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "program": "integration_test/screenshot_test.dart"
        },
    ]
}